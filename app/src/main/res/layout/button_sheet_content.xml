<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="1000dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            app:srcCompat="@drawable/maket_button_sheet_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/maket_button_sheet"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Какие показать сначала?"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="18.5"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:id="@+id/filter1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickButtonSheen"
                    android:text="Доверюсь вам"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/filter2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickButtonSheen"
                    android:text="С высоким рейтингом"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/filter3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickButtonSheen"
                    android:text="Быстрые"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/filter4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickButtonSheen"
                    android:text="Недорогие"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/filter5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:onClick="onClickButtonSheen"
                    android:text="Дорогие"
                    android:textColor="#000000"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="right"
                android:orientation="vertical"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/tick1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tick"
                    android:onClick="onClickButtonSheen" />

                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:onClick="onClickButtonSheen"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/tick3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:onClick="onClickButtonSheen"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/tick4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:onClick="onClickButtonSheen"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/tick5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="#FFFF"
                    android:onClick="onClickButtonSheen"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/ok_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/maket_button_in_botton_sheet"
                android:onClick="onClickButtonSheen"
                android:text="Готово"
                android:textColor="#000000"
                android:textSize="19sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/sbros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/maket_button_in_botton_sheet_2"
                android:onClick="onClickButtonSheen"
                android:text="Сбросить"
                android:textColor="#000000"
                android:textSize="19sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/maket_button_in_botton_sheet"
                android:onClick="onClickButtonSheen"
                android:text="Готово"
                android:textColor="#000000"
                android:textSize="19sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>